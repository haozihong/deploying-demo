<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f48b35042c.js" crossorigin="anonymous"></script>

    <title>Munsell Color Conversion</title>
  </head>
  <body>
    <div class="container">
      <h1 class="my-4">
        Convert to Munsell
      </h1>
      
      <div class="row">
        <div class="col-lg-4 mb-3">
          <div class="card <%= (result && result.ori_sys == "hex")? "border-primary" : "" %>">
            <h5 class="card-header">Hex to Munsell</h5>
            <div class="card-body">
              <!-- <h5 class="card-title">Special title treatment</h5> -->
              <form class="" action="/color-convert/" method="GET">
                <div class="form-group">
                  <label class="" for="ori_clr">Hex</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">#</span>
                    </div>
                    <input class="form-control" id="ori_clr" type="text" name="ori_clr" placeholder="HEX"
                           value="<%= (result && result.ori_sys == "hex")? result.ori_clr.slice(1) : "" %>">
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">Digits(≥0)</span>
                    </div>
                    <input class="form-control" type="number" id="digits" name="digits" min="0"
                           value="<%= (result && result.ori_sys == "hex")? result.digits : 1 %>">
                  </div>
                </div>
                <input type="hidden" name="mode" value="hex_to_munsell" />
                <button class="btn btn-primary">Convert</button>
              </form>
            </div> <!-- card body -->
          </div> <!-- card -->
        </div> <!-- col -->
      
        <div class="col-lg-4 mb-3">
          <div class="card <%= (result && result.ori_sys == "rgb255")? "border-primary" : "" %>">
            <h5 class="card-header">RGB255 to Munsell</h5>
            <div class="card-body">
              <form class="" action="/color-convert/" method="GET">
                <div class="form-group">
                  <label class="" for="ori_clr">RGB(0~255)</label>
                  <div class="input-group">
                    <input class="form-control" id="" type="text" name="ori_clr_r255" placeholder="R"
                           value="<%= (result && result.ori_sys == "rgb255")? result.ori_clr[0] : "" %>">
                    <input class="form-control" id="" type="text" name="ori_clr_g255" placeholder="G"
                           value="<%= (result && result.ori_sys == "rgb255")? result.ori_clr[1] : "" %>">
                    <input class="form-control" id="" type="text" name="ori_clr_b255" placeholder="B"
                           value="<%= (result && result.ori_sys == "rgb255")? result.ori_clr[2] : "" %>">
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">Digits(≥0)</span>
                    </div>
                    <input class="form-control" type="number" id="digits" name="digits" min="0"
                           value="<%= (result && result.ori_sys == "rgb255")? result.digits : 1 %>">
                  </div>
                </div>
                <input type="hidden" name="mode" value="rgb255_to_munsell">
                <button class="btn btn-primary">Convert</button>
              </form>
            </div> <!-- card body -->
          </div> <!-- card -->
        </div> <!-- col -->

        <div class="col-lg-4 mb-3">
          <div class="card <%= (result && result.ori_sys == "rgb")? "border-primary" : "" %>">
            <h5 class="card-header">RGB to Munsell</h5>
            <div class="card-body">
              <form class="" action="/color-convert/" method="GET">
                <div class="form-group">
                  <label class="" for="ori_clr">RGB(0~1)</label>
                  <div class="input-group">
                    <input class="form-control" id="" type="text" name="ori_clr_r" placeholder="R"
                           value="<%= (result && result.ori_sys == "rgb")? result.ori_clr[0] : "" %>">
                    <input class="form-control" id="" type="text" name="ori_clr_g" placeholder="G"
                           value="<%= (result && result.ori_sys == "rgb")? result.ori_clr[1] : "" %>">
                    <input class="form-control" id="" type="text" name="ori_clr_b" placeholder="B"
                           value="<%= (result && result.ori_sys == "rgb")? result.ori_clr[2] : "" %>">
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">Digits(≥0)</span>
                    </div>
                    <input class="form-control" type="number" id="digits" name="digits" min="0"
                           value="<%= (result && result.ori_sys == "rgb")? result.digits : 1 %>">
                  </div>
                </div>
                <input type="hidden" name="mode" value="rgb_to_munsell">
                <button class="btn btn-primary">Convert</button>
              </form>
            </div> <!-- card body -->
          </div> <!-- card -->
        </div> <!-- col -->
      </div> <!-- row -->

      <% if (result) { %>
        <div class="card">
          <h5 class="card-header">Result</h5>
          <div class="card-body">
            <table class="table table-hover">
              <thead></thead>
              <tbody>
                <tr>
                  <td>From: <%= result.ori_sys.toUpperCase() %></td>
                  <td>
                    <span style="color: <%= result.ori_css_clr %>;"><i class="fas fa-square"></i></span>
                    <%= result.ori_clr %>
                  </td>
                </tr>
                <tr>
                  <td>To: <%= result.convert_sys.toUpperCase() %></td>
                  <td>
                    <span style="color: <%= result.hex_back %>;"><i class="fas fa-square"></i></span>
                    <%= result.convert_clr %>
                  </td>
                </tr>
                <tr>
                  <td>Color back</td>
                  <td><%= result.convert_back %></td>
                </tr>
                <tr>
                  <td>RGB255 back</td>
                  <td><%= result.rgb255_back %></td>
                </tr>
                <tr style="display: none;">
                  <td>RGB back</td>
                  <td><%= result.rgb_back %></td>
                </tr>
              </tbody>
            </table>
            <a class="btn btn-danger" href="/color-convert">Clear Result</a>
          </div> <!-- card body -->
        </div> <!-- card -->
      <% } %>

    </div><!-- container -->
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>